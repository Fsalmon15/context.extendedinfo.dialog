<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.extendedinfo.dialog" name="ExtendedInfo Script - Open dialog" version="1.0.2" provider-name="phil65">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
    <import addon="script.extendedinfo" version="4.5.0"/>
  </requires>
  <extension point="kodi.context.item">
    <menu id="kodi.core.main">
      <item library="addon.py">
        <label>32000</label>
        <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season) | StringCompare(ListItem.dbtype,actor) | StringCompare(ListItem.dbtype,director)</visible>
      </item>
    </menu>
  </extension>
  <extension point="kodi.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Open ExtendedInfo dialog from context menu in library</summary>
    <description lang="en">Open ExtendedInfo dialog from context menu in library. Needs script.extendedinfo installed and activated. Available for movies, tv shows and seasons currently.</description>
